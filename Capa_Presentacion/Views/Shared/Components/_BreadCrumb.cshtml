@{
    var breadcrumbs = ViewData["Breadcrumbs"] as List<Dictionary<string, string>>;
}

<div class="bg-dark my-4 rounded-3" aria-label="breadcrumb">
    <ol class="breadcrumb py-2 px-4">
        <li id="breadcrumb0" class="text-white">Estas Aquí: &nbsp;&nbsp; </li>

        @if(breadcrumbs != null)
        {
            var lastIndex = breadcrumbs.Count - 1;
            for(int i = 0; i < breadcrumbs.Count; i++)
            {
                var item = breadcrumbs[i];
                var titulo = item.ContainsKey("Titulo") ? item["Titulo"] : "";
                var url = item.ContainsKey("Url") ? item["Url"] : "";

                if (i == lastIndex || string.IsNullOrEmpty(url))
                {
                    <li class="breadcrumb-item active breadcrumb-responses text-light" aria-current="page">@titulo</li>
                }
                else
                {
                    <li class="breadcrumb-item breadcrumb-responses">
                        <a id="breadcrumb-item1" class="hoverLink text-decoration-none text-primary" href="@url">@titulo</a>
                    </li>
                }
            }
        }
    </ol>
</div>

<style>
    .hoverLink:hover { color:darkgrey !important; }
</style>